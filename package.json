{
  "name": "typescript-starter",
  "version": "1.1.0",
  "description": "An unofficial starter for typescript projects",
  "main": "src/index.ts",
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "tsc --build",
    "start:prod": "node dist/src/index.js",
    "start:dev": "ts-node src/",
    "start:watch": "nodemon src/index.ts",
    "release": "npm version $(semver $npm_package_version -i minor) && npm publish --tag latest"
  },
  "author": "Elie Drai",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.3",
    "pino": "^8.7.0",
    "pino-pretty": "^9.1.1"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "nodemon": "^2.0.20",
    "release-please": "^14.17.3",
    "ts-node-dev": "^2.0.0"
  }
}
